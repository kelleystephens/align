extends ../shared/template

block content

  h1 Welcome #{user.email} - #{user.type}

  table.table-bordered#courses
    thead
      th Course Name
      th Course Description
      th Course Content
      th
      th
    tbody
      each course in courses
        tr.table-striped
          td(data-id=course._id.toString())= course.title
          td #{course.description}
          td
            a(href='/learners/courses/#{course._id}/content') View Content
          td(class=course.classes) #{course.score}
          td
            if(course.isRetestAvailable)
              a(href='/learners/courses/#{course._id}/test') Retake Test
